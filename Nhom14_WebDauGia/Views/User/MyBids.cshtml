@model IEnumerable<AuctionWeb.Models.AuctionBid>

<h2 class="mt-3 text-center font-weight-bold">LỊCH SỬ ĐẤU GIÁ</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Giá đã đặt</th>
            <th>Thời gian</th>
            <th>Chi tiết phiên đấu giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Auction.Product.Product_Name</td>
                <td>@b.Bid_Amount.ToString("N0") VNĐ</td>
                <td>@b.Bid_Time.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a class="btn btn-sm btn-info"
                       asp-controller="Auction" asp-action="Details"
                       asp-route-id="@b.Auction.Auction_ID">
                        Xem chi tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
