@model AuctionWeb.Models.ProductCategory
@{
    ViewData["Title"] = "Thêm thể loại";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">THÊM THÔNG TIN THỂ LOẠI</h2>

    <form asp-action="CreateCategory" method="post">
        <div class="form-group mb-4">
            <label asp-for="Product_Cate_Name" class="form-label">Tên thể loại</label>
            <input asp-for="Product_Cate_Name" class="form-control" required />
            <span asp-validation-for="Product_Cate_Name" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Thêm</button>
            <a asp-action="ProductCategories" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
