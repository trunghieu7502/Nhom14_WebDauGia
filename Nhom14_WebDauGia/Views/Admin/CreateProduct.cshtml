@model AuctionWeb.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">THÊM SẢN PHẨM MỚI</h2>

    <form asp-action="CreateProduct" method="post">
        <div class="form-group mb-4">
            <label asp-for="Product_Name" class="form-label">Tên sản phẩm</label>
            <input asp-for="Product_Name" class="form-control" required />
            <span asp-validation-for="Product_Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Product_Description" class="form-label">Mô tả</label>
            <textarea asp-for="Product_Description" class="form-control" required></textarea>
            <span asp-validation-for="Product_Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Product_Start_Bid_Amount" class="form-label">Giá khởi điểm</label>
            <input asp-for="Product_Start_Bid_Amount" class="form-control" type="number" required />
            <span asp-validation-for="Product_Start_Bid_Amount" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Min_Bid_Increment" class="form-label">Mức tăng tối thiểu</label>
            <input asp-for="Min_Bid_Increment" class="form-control" type="number" required />
            <span asp-validation-for="Min_Bid_Increment" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Product_Cate_ID" class="form-label">Thể loại</label>
            <select asp-for="Product_Cate_ID" asp-items="@ViewBag.Categories" class="form-control" required>
                <option value="">-- Chọn thể loại --</option>
            </select>
            <span asp-validation-for="Product_Cate_ID" class="text-danger"></span>
        </div>

        <!-- Thêm trường Seller_ID ẩn -->
        <input type="hidden" asp-for="Seller_ID" value="1" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Thêm</button>
            <a asp-action="Products" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
